<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baidu.lease.web.admin.mapper.SystemUserMapper">
    <select id="pageSystemUserByQuery" resultType="com.baidu.lease.web.admin.vo.system.user.SystemUserItemVo">
        select t1.id, t1.name, t1.phone, t1.type, t1.status, t2.name as postName
        from system_user t1
        left join system_post t2
        on t1.post_id = t2.id
        <where>
            and t1.is_deleted = 0
            and t2.is_deleted = 0
            <if test="queryVo.name != null">
                and t1.name like concat('%',#{queryVo.name},'%')
            </if>
            <if test="queryVo.phone != null">
                and t1.phone like concat('%',#{queryVo.phone},'%')
            </if>
        </where>
    </select>
