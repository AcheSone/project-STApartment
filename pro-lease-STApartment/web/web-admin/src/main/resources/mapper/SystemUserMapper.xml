    <select id="getSystemUserById" resultType="com.baidu.lease.web.admin.vo.system.user.SystemUserItemVo">
        select t1.id, t1.name, t1.phone, t1.type, t1.status, t2.name as 'postName'
        from system_user t1
                 left join system_post t2
                           on t1.post_id = t2.id
        where t1.is_deleted = 0
          and t2.is_deleted = 0
          and t1.id = #{id}
    </select>
